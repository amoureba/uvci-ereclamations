{% extends 'base/base.html.twig' %}
{% block title %}Modification de mote de passe{% endblock %}
{% block body %}
    <div class="container mt-3">
        {% if app.user %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent">
                    <li class="breadcrumb-item"><a href="{{ path('account') }}"><i class="fas fa-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Mot de passe</li>
                </ol>
            </nav>
        
            <div class="row justify-content-center">
                <div class="col-xl-8 col-md-8 mb-4">
                    <div class="card card-header-actions h-100">
                        <div class="card-header text-white" style="background-color:#800080;">
                            <span class="text-uppercase bg-success text-white font-weight-bold p-2">
                                <i class="fas fa-key"></i>&ensp;Modification de mote de passe
                            </span>
                        </div>
                        <div class="card-body">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="btn btn-danger mt-2" type="submit">Valider la modification&ensp;<i class="fas fa-check"></i></button>
                            {{ form_end(form) }} 
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-success">
                <i class="fas fa-hand-point-right"></i>&ensp;Se Connecter
            </a>
        {% endif %}
    </div>
{% endblock %}

