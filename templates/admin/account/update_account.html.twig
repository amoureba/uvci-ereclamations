{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord - Information utilisateur{% endblock %}

{% block body %}
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-header pb-10">
                <div class="container">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">

                                <nav aria-label="breadcrumb" class="bg-transparent">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">
                                            <i class="fas fa-home" style="color:white;"></i></a>
                                        </li>
                                        <li class="breadcrumb-item active text-white" aria-current="page">
                                            Vos Informations
                                        </li>
                                    </ol>
                                </nav>

                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main page content-->
            <div class="container mt-n10">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-md-8 mb-4">
                        <div class="card card-header-actions h-100">
                            <div class="card-header text-uppercase text-purple">
                            <span class="text-uppercase bg-success text-white font-weight-bold p-2">
                                <i class="fas fa-user"></i>&ensp;Vos Informations
                            </span>
                            </div>
                            <div class="card-body">
                                {% if app.user.avatar is empty %}
                                    {# Not Avatar #}
                                {% else %}
                                    <img src="{{app.user.avatarPath}}" class="avatar ml-2 mb-3" alt="Avatar">
                                {% endif %}
                                {{ form_start(form) }}
                                {{ form_widget(form) }}
                                <button type="submit" class="btn btn-success">Enregistrer les Modifications&nbsp;<i class="fas fa-check"></i></button>
                                {{ form_end(form) }} 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer class="footer mt-auto footer-light">
            {#  footer #}
            {% include "admin/footer.html.twig" %}
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(".custom-file-input").on("change", function(){
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
{% endblock %}
