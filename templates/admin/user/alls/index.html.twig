{% extends 'admin/base.html.twig' %}
{% block title %}Liste des utilisateurs{% endblock %}
{% block body %}
    <div id="layoutSidenav_content">
        <main>
            <header class="page-header page-header-dark bg-header pb-10">
                <div class="container">
                    <div class="page-header-content pt-4">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto mt-4">
                                <nav aria-label="breadcrumb" class="bg-transparent text-white">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="{{ path('admin') }}">
                                            <i class="fas fa-home" style="color:white;"></i></a>
                                        </li>
                                        <li class="breadcrumb-item active text-white" aria-current="page">
                                            Liste des utilisateurs
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container mt-n10">
                <div class="card mb-4">
                    <div class="card-header">
                        <ul class="nav">
                            <li class="nav-item m-2">
                                <span class="text-uppercase bg-success text-white font-weight-bold p-2">
                                    <i class="fas fa-users"></i>&ensp;Liste des utilisateurs
                                </span>
                            </li>
                            <li class="nav-item ml-auto m-2">
                                <a class="nav-link btn btn-purple" href="{{ path('users_add') }}">
                                    <i class="bi bi-person-plus-fill"></i>&ensp;AJOUTER
                                </a>
                            </li>
                        </ul>
                    </div>
                    <ul class="nav nav-tabs mt-2">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#students">ETUDIANTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#teachers">ENSEIGNANTS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#managers">GESTIONNAIRES</a>
                        </li>
                        {#<li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#technicians">TECHNICIENS</a>
                        </li>#}
                    </ul>
                    <div class="card-body">
                        <div class="tab-content">
                            {# students #}
                            <div class="tab-pane container active" id="students">
                                <div class="datatable">
                                    <table class="display table table-striped table-bordered table-hover" id="" width="100%" cellspacing="0">
                                        <thead class="bg-secondary">
                                            <tr class="text-uppercase font-weight-bold text-center text-white">
                                                <th class="align-middle">Nom et Prénoms</th>
                                                <th class="align-middle">E-mail</th>
                                                <th class="align-middle">Statut</th>
                                                <th class="align-middle">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for student in students %}
                                                <tr>
                                                    <td class="align-middle">{{ student.fullName }}</td>
                                                    <td class="align-middle">{{ student.email }}</td>
                                                    <td class="align-middle text-center">
                                                        {% if student.blocked == false or student.blocked == null %}
                                                            <i class="fas fa-user-check text-success"></i>
                                                        {% else %}
                                                            <i class="fas fa-user-times text-danger"></i>
                                                        {% endif %}
                                                    </td>
                                                    <td class="align-middle text-center">
                                                        <a href="{{ path('users_edit', {'id': student.id}) }}" class="btn btn-success btn-sm">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="{{ path('users_reset_password', {'id': student.id}) }}" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </a>
                                                    </td>                                 
                                                </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            {# teachers #}
                            <div class="tab-pane container" id="teachers">
                                <div class="datatable">
                                    <table class="display table table-striped table-bordered table-hover" id="" width="100%" cellspacing="0">
                                        <thead class="bg-secondary">
                                            <tr class="text-uppercase font-weight-bold text-center text-white">
                                                <th class="align-middle">Nom et Prénoms</th>
                                                <th class="align-middle">E-mail</th>
                                                <th class="align-middle">Statut</th>
                                                <th class="align-middle">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for teacher in teachers %}
                                            <tr>
                                                <td class="align-middle">{{ teacher.fullName }}</td>
                                                <td class="align-middle">{{ teacher.email }}</td>
                                                <td class="align-middle text-center">
                                                    {% if teacher.blocked == false or teacher.blocked == null %}
                                                        <i class="fas fa-user-check text-success"></i>
                                                    {% else %}
                                                        <i class="fas fa-user-times text-danger"></i>
                                                    {% endif %}
                                                </td>
                                                <td class="align-middle text-center">
                                                    <a href="{{ path('users_edit', {'id': teacher.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                                                    <a href="{{ path('users_reset_password', {'id': teacher.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-sync-alt"></i></a>
                                                </td>                                 
                                            </tr> 
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            {# managers #}
                            <div class="tab-pane container" id="managers">
                                <div class="datatable">
                                    <table class="display table table-striped table-bordered table-hover" id="" width="100%" cellspacing="0">
                                        <thead class="bg-secondary">
                                            <tr class="text-uppercase font-weight-bold text-center text-white">
                                                <th class="align-middle">Nom et Prénoms</th>
                                                <th class="align-middle">E-mail</th>
                                                <th class="align-middle">Statut</th>
                                                <th class="align-middle">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for manager in managers %}
                                            <tr>
                                                <td class="align-middle">{{ manager.fullName }}</td>
                                                <td class="align-middle">{{ manager.email }}</td>
                                                <td class="align-middle text-center">
                                                    {% if manager.blocked == false or manager.blocked == null %}
                                                        <i class="fas fa-user-check text-success"></i>
                                                    {% else %}
                                                        <i class="fas fa-user-times text-danger"></i>
                                                    {% endif %}
                                                </td>
                                                <td class="align-middle text-center">
                                                    <a href="{{ path('users_edit', {'id': manager.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                                                    <a href="{{ path('users_reset_password', {'id': manager.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-sync-alt"></i></a>
                                                </td>                                 
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            {# technicians #}
                            {#<div class="tab-pane container" id="technicians">
                                <div class="datatable">
                                    <table class="display table table-striped table-bordered table-hover" id="" width="100%" cellspacing="0">
                                        <thead class="bg-secondary">
                                            <tr class="text-uppercase font-weight-bold text-center text-white">
                                                <th class="align-middle">Nom et Prénoms</th>
                                                <th class="align-middle">E-mail</th>
                                                <th class="align-middle">Statut</th>
                                                <th class="align-middle">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for technician in technicians %}
                                            <tr>
                                                <td class="align-middle">{{ technician.fullName }}</td>
                                                <td class="align-middle">{{ technician.email }}</td>
                                                <td class="align-middle text-center">
                                                    {% if technician.blocked == false or technician.blocked == null %}
                                                        <i class="fas fa-user-check text-success"></i>
                                                    {% else %}
                                                        <i class="fas fa-user-times text-danger"></i>
                                                    {% endif %}
                                                </td>
                                                <td class="align-middle text-center">
                                                    <a href="{{ path('users_edit', {'id': technician.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                                                    <a href="{{ path('users_reset_password', {'id': technician.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-sync-alt"></i></a>
                                                </td>                                 
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>#}
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer class="footer mt-auto footer-light">
            {% include "admin/footer.html.twig" %}
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('table.display').DataTable();
        } );
    </script>
{% endblock %}